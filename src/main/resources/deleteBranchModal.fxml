<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox style="-fx-max-width: 450; -fx-min-width: 450;" styleClass="form-container"
	stylesheets="@login_styles.css" xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="tpgroup.controller.graphical.javafx.DeleteBranchModalGUIController">
	<children>
		<Text styleClass="heading" text="Delete Branch" style="-fx-font-size: 18;" />

		<Label text="Select Branch to Delete:" styleClass="form-label" />
		<ComboBox fx:id="branchCmBox" promptText="Select branch" styleClass="input-field"
			prefWidth="400" onAction="#onBranchSelected" />

		<Text fx:id="warningTxt" style="-fx-font-size: 11; -fx-fill: #d63031; -fx-font-weight: bold;" 
			wrappingWidth="400" />

		<Text fx:id="outLogTxt" strokeType="OUTSIDE" strokeWidth="0.0" />

		<Button fx:id="deleteBtn" styleClass="button-cancel" text="Delete" onAction="#onDelete" />
		<Button styleClass="button-logout" text="Cancel" onAction="#onCancel" />
	</children>
</VBox>
