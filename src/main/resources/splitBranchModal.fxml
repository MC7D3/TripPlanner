<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox style="-fx-max-width: 450; -fx-min-width: 450;" styleClass="form-container"
	stylesheets="@login_styles.css" xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="tpgroup.controller.graphical.javafx.SplitBranchModalGUIController">
	<children>
		<Text styleClass="heading" text="Split Branch" style="-fx-font-size: 18;" />

		<Label text="Select Branch to Split:" styleClass="form-label" />
		<ComboBox fx:id="branchCmBox" promptText="Select branch" styleClass="input-field"
			prefWidth="400" onAction="#onBranchSelected" />

		<Label text="Select Pivot Event:" styleClass="form-label" />
		<ComboBox fx:id="eventCmBox" promptText="Select event" styleClass="input-field"
			prefWidth="400" />

		<Text style="-fx-font-size: 11; -fx-fill: #636e72;" 
			text="The branch will be split at the selected event. The event and all following events will move to a new branch." 
			wrappingWidth="400" />

		<Text fx:id="outLogTxt" strokeType="OUTSIDE" strokeWidth="0.0" />

		<Button styleClass="button-primary" text="Split" onAction="#onSplit" />
		<Button styleClass="button-logout" text="Cancel" onAction="#onCancel" />
	</children>
</VBox>
