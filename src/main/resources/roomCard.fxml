<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox styleClass="form-container" stylesheets="@login_styles.css" 
      spacing="10" xmlns="http://javafx.com/javafx/23.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tpgroup.controller.graphical.javafx.RoomCardGUIController">
   <padding>
      <Insets top="10" right="10" bottom="10" left="10"/>
   </padding>
   <children>
      <Text fx:id="roomNameTxt" strokeType="OUTSIDE" strokeWidth="0.0" 
            style="-fx-font-size: 18; -fx-font-weight: bold;" 
            styleClass="heading" />
      <Text fx:id="roomCodeTxt" strokeType="OUTSIDE" strokeWidth="0.0" 
            style="-fx-font-size: 12;" />
      <Text fx:id="roomMembersTxt" strokeType="OUTSIDE" strokeWidth="0.0" 
            style="-fx-font-size: 12;" />
      <Text fx:id="adminStatusTxt" strokeType="OUTSIDE" strokeWidth="0.0" 
            style="-fx-font-size: 12; -fx-fill: #6c5ce7; -fx-font-weight: bold;" />
      
      <HBox spacing="10" style="-fx-alignment: center;">
         <children>
            <Button fx:id="enterRoomBtn" styleClass="button-primary" 
                    text="Enter" onAction="#onEnterRoom" />
            <Button fx:id="abbandonRoomBtn" styleClass="button-cancel" 
                    text="Abandon" onAction="#onAbandonRoom" />
         </children>
      </HBox>
   </children>
</VBox>
