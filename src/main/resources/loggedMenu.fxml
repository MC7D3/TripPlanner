<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane
	style="-fx-min-width: 1200; -fx-min-height: 800;"
	styleClass="loginBackPane" stylesheets="@login_styles.css"
	xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="tpgroup.controller.graphical.javafx.LoggedMenuGUIController">
	<bottom>
		<HBox
			style="-fx-alignment: center;"
			styleClass="form-container" spacing="20">
			<padding>
				<Insets top="15" right="20" bottom="15" left="20" />
			</padding>
			<children>
				<Text fx:id="outLogTxt" strokeType="OUTSIDE" strokeWidth="0.0" />
				<Button fx:id="refreshBtn" styleClass="button-primary" text="refresh"
					onAction="#refreshUI" />
				<Button fx:id="joinroomBtn" styleClass="button-primary" text="join room"
					onAction="#joinRoom" />
				<Button fx:id="createRoomBtn" styleClass="button-primary" text="Create Room"
					onAction="#createRoom" />
				<Button fx:id="optionsBtn" styleClass="button-primary" text="Options"
					onAction="#options" />
				<Button fx:id="logoutBtn" cancelButton="true" styleClass="button-logout"
					text="Logout" onAction="#logout" />
			</children>
		</HBox>
	</bottom>
	<center>
		<ScrollPane cache="true" depthTest="DISABLE"
			style="-fx-background-color: transparent; -fx-background: transparent;"
			styleClass="custom-scroll-pane" fitToWidth="true">
			<content>
				<GridPane fx:id="grid" hgap="15" vgap="15" style="-fx-padding: 15;">
					<columnConstraints>
						<ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="250"
							prefWidth="250" />
						<ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="250"
							prefWidth="250" />
						<ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="250"
							prefWidth="250" />
					</columnConstraints>
					<rowConstraints>
					</rowConstraints>
				</GridPane>
			</content>
		</ScrollPane>
	</center>
</BorderPane>
