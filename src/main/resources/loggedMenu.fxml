<BorderPane
	style="-fx-min-width: 700; -fx-min-height: 700; -fx-max-height: 700; -fx-max-width: 700;"
	styleClass="loginBackPane" stylesheets="@login_styles.css"
	xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="tpgroup.controller.graphical.javafx.LoggedMenuGUIController">
	<bottom>
            <Text fx:id="outLogTxt" strokeType="OUTSIDE" strokeWidth="0.0" />
		<HBox
			style="-fx-alignment: center; -fx-min-width: 700; -fx-max-width: 700; -fx-max-height: 100; -fx-min-height: 100;"
			styleClass="form-container">
			<children>
				<button fx:id="refresh" styleclass="button-primary" text="join room"
					onaction="#refreshUI" />
				<button fx:id="joinroombtn" styleclass="button-primary" text="join room"
					onaction="#joinroom" />
				<Button fx:id="CreateRoomBtn" styleClass="button-primary" text="Create Room"
					onAction="#createRoom" />
				<Button fx:id="optionsBtn" styleClass="button-primary" text="Options"
					onAction="#options" />
				<Button fx:id="logoutBtn" cancelButton="true" styleClass="button-logout"
					text="Logout" onAction="#logout" />
			</children>
		</HBox>
	</bottom>
	<center>
		<ScrollPane cache="true" depthTest="DISABLE" prefHeight="506.0" prefWidth="459.0"
			style="-fx-min-height: 600; -fx-max-height: 600; -fx-min-width: 700; -fx-max-width: 700;"
			styleClass="custom-scroll-pane">
			<content>
				<GridPane fx:id="grid">
					<columnConstraints>
						<ColumnConstraints />
						<ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
						<ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints />
						<RowConstraints />
						<RowConstraints />
					</rowConstraints>
					<children>
					</children>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</GridPane>
			</content>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</ScrollPane>
	</center>
</BorderPane>
