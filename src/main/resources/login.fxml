<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane style="-fx-min-width: 600; -fx-min-height: 600; -fx-max-height: 600; -fx-min-width: 600;" styleClass="loginBackPane" stylesheets="@login_styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tpgroup.view.javafx.LoginGUIController">
   <children>
      <VBox fx:id="loginForm" style="-fx-max-height: 100; -fx-max-width: 100;" styleClass="form-container">
         <children>
            <Text fx:id="loginText" styleClass="heading" text="Welcome">
      </Text>
            <Group fx:id="emailField" styleClass="group">
               <children>
                  <TextField fx:id="emailTxt" styleClass="input-field" onKeyPressed="#onFocus"/>
                  <Label fx:id="emailLabel" styleClass="form-label" text="Email">
                  </Label>
               </children>
            </Group>
            <Group fx:id="pwdField" styleClass="group">
               <children>
						<!--       <Hyperlink fx:id="recoverPwdLink" text="Recover Password" />-->
                  <PasswordField fx:id="pwdTxt" styleClass="input-field" onKeyPressed="#onFocus"/>
                  <Label fx:id="pwdLabel" styleClass="form-label" text="Password">
                  </Label>
               </children>
            </Group>
            <Text fx:id="outLogTxt" strokeType="OUTSIDE" strokeWidth="0.0" />
            <Hyperlink style="-fx-underline: true;" text="Don't have an account? Register" onAction="#redirectRegistration"/>
            <Button fx:id="loginBtn" mnemonicParsing="false" styleClass="button-primary" text="Login" onAction="#onLogin"/>
         </children>
      </VBox>
   </children>
</StackPane>
